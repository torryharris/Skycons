<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun"
            android:id="@+id/sun"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moon"
            android:id="@+id/moon"
            android:layout_below="@+id/sun"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloud+Sun"
            android:id="@+id/cloud_sun"
            android:layout_below="@+id/moon"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloud+Moon"
            android:id="@+id/cloud_moon"
            android:layout_below="@+id/cloud_sun"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloud"
            android:id="@+id/cloud"
            android:layout_below="@+id/cloud_moon"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloud+Rain"
            android:id="@+id/cloud_rain"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/cloud"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloud+HvRain"
            android:id="@+id/cloud_hvrain"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/cloud_rain"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Cloud+Snow"
            android:id="@+id/cloud_snow"
            android:layout_below="@+id/cloud_hvrain"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wind"
            android:id="@+id/wind"
            android:layout_below="@+id/cloud_snow"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wind"
            android:text="Cloud+Fog"
            android:id="@+id/cloud_fog"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" />

    </RelativeLayout>
</ScrollView>